<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:layout_height="wrap_content"
    android:layout_gravity="center">

    <LinearLayout
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/barra"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <TextView
            android:id="@+id/dialog_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name"
            android:textColor="@color/txt_btn"
            android:textStyle="bold"
            android:textSize="25sp"
            android:layout_marginTop="90dp"/>

        <TextView
            android:id="@+id/dialog_fecha"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Fecha"
            android:textColor="@color/txt_btn"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"/>

        <TextView
            android:id="@+id/dialog_lugar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Lugar"
            android:textColor="@color/txt_btn"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/dialog_organizador"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Organizador"
            android:textColor="@color/txt_btn"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"/>

        <TextView
            android:id="@+id/dialog_hora"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:text="Hora"
            android:textColor="@color/txt_btn"
            android:layout_marginTop="1dp"
            android:layout_marginBottom="10dp"/>

        <Button
            android:id="@+id/dialog_btnsuscribirse"
            android:padding="20dp"
            android:textAlignment="textStart"
            android:drawablePadding="20dp"
            android:drawableLeft="@drawable/ic_star"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/txt_btn"
            android:text="Suscribirse a evento"
            android:layout_marginTop="10dp"
            android:layout_gravity="start" />

        <Button
            android:id="@+id/dialog_btncontacto"
            android:drawablePadding="20dp"
            android:textAlignment="textStart"
            android:padding="20dp"
            android:drawableLeft="@drawable/ic_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/txt_btn"
            android:text="Contactarse"
            android:layout_gravity="start" />

    </LinearLayout>

    <ImageView
        android:id="@+id/dialog_img"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:src="@drawable/perfil"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"
        />


</RelativeLayout>